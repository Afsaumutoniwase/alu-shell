#!/usr/bin/env bash
# Manages "manage_my_process"#!/bin/bash

PID_FILE="/var/run/my_process.pid"
MANAGE_SCRIPT="./manage_my_process"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "Error: manage_my_process is already running. PID: $(cat $PID_FILE)"
    else
        $MANAGE_SCRIPT &
        echo $! > $PID_FILE
        echo "manage_my_process started"
    fi
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill $(cat $PID_FILE)
        rm $PID_FILE
        echo "manage_my_process stopped"
    else
        echo "Error: manage_my_process is not running."
    fi
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
